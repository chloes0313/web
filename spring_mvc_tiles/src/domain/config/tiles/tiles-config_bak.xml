<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC 
		"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
		"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<!-- tiles설정파일 root : tiles-definitions -->
<tiles-definitions>

<!-- 하나의 페이지(view)를 설정하는 태그 : definition
	 	속성-	name : 설정의 식별자 (handler가 리턴하는 view name과 연결)
	  		template : layout.jsp의 위치를 지정
	  		extends : 기존 definition 속성을 이용해서 쓰겠다
	  		
	  	하위태그 :	put-attribute : template(view)를 구성하는 하나의 요소를 설정
	  		속성-	name : template 페이지에서 조회할 떄 사용할 식별값
	  			value : template 페이지에 넣어줄 jsp의 위치
-->
<definition name="template" template="/WEB-INF/view/layout/template.jsp">
<put-attribute name="header" value="/WEB-INF/view/layout/header.jsp"/>
	<put-attribute name="nav" value="/WEB-INF/view/layout/menu.jsp"/>
	<put-attribute name="footer" value="/WEB-INF/view/layout/footer.jsp"/>
</definition>



<!-- 메인페이지 -->
<definition name="main.tiles" template="/WEB-INF/view/layout/template.jsp">
	<put-attribute name="header" value="/WEB-INF/view/layout/header.jsp"/>
	<put-attribute name="nav" value="/WEB-INF/view/layout/menu.jsp"/>
	<put-attribute name="footer" value="/WEB-INF/view/layout/footer.jsp"/>
	<put-attribute name="content" value="/WEB-INF/view/content/main.jsp"/>
</definition>

<!-- 회원가입페이지 -->
<definition name="member/join_form.tiles" extends="template">
	<put-attribute name="content" value="/WEB-INF/view/content/member/join_form.jsp"/>
</definition>

<!-- 제품등록페이지 -->
<definition name="product/register_form.tiles" extends="template">
	<put-attribute name="content" value="/WEB-INF/view/content/product/register_form.jsp"/>
</definition>

<!-- 회원가입 성공시 -->
<definition name="member/join_success.tiles" extends="template">
	<put-attribute name="content" value="/WEB-INF/view/content/member/join_success.jsp"/>
</definition>

<!-- 제품 등록 성공 -->
<definition name="product/register_success.tiles" extends="template">
	<put-attribute name="content" value="/WEB-INF/view/content/product/register_success.jsp"/>
</definition>
</tiles-definitions>















